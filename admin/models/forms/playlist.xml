<?xml version="1.0" encoding="utf-8"?>
<form
>
	<fieldset name="playlist">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_VOMBIEMUSIC_PLAYLIST_NAME"
			description="COM_VOMBIEMUSIC_PLAYLIST_NAME_DESC"
			size="40"
			required="true"
			default=""
		/>

		<field 
			name="published"
			type="list"
			label="COM_VOMBIEMUSIC_PLAYLIST_PUBLISHED"
			description="COM_VOMBIEMUSIC_PLAYLIST_PUBLISHED_DESC"
			class="inputbox"
			default="1"
		>
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
		</field>

		<field
			name="playlist_songs"
			label="COM_VOMBIEMUSIC_PLAYLIST_SONGS"
			type="VombieMusicPlaylistSongs"
		/>

		<field 
			name="info"
			type="editor"
			label="COM_VOMBIEMUSIC_PLAYLIST_INFO"
			description="COM_VOMBIEMUSIC_PLAYLIST_INFO_DESC"
		/>
	</fieldset>
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
   		<field
			name="image"
			type="media"
			directory="media/com_vombiemusic"
			label="COM_VOMBIEMUSIC_PLAYLIST_IMAGE"
			description="COM_VOMBIEMUSIC_PLAYLIST_IMAGE_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="publish_up"
			type="calendar"
			label="COM_VOMBIEMUSIC_SONG_PUBLISH"
			description="COM_VOMBIEMUSIC_SONG_PUBLISH_DESC"
			class="inputbox" 
			size="20"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" 
		/>
       <field
			name="publish_down"
			type="calendar"
			label="COM_VOMBIEMUSIC_SONG_UNPUBLISH"
			description="COM_VOMBIEMUSIC_SONG_UNPUBLISH_DESC"
			class="inputbox" size="20"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" 
		/>
		<field
			name="created_by"
			type="user"
			label="COM_VOMBIEMUSIC_SONG_CREATED_BY"
			description="VOMBIEMUSIC_SONG_CREATED_BY_DESC" 
		/>
		<field
			name="created_by_alias"
			type="text"
			label="COM_VOMBIEMUSIC_SONG_CREATED_BY_ALIAS"
			description="VOMBIEMUSIC_SONG_CREATED_BY_ALIAS"
			class="inputbox"
			size="20" 
		/>
		</fieldset>
		<fieldset 
			name="metadata"
			label="VOMBIEMUSIC_METADATA">
        
        	<field
				name="browser_title"
				type="text"
				label="COM_VOMBIEMUSIC_BROWSER_TITLE"
				description="VOMBIEMUSIC_BROWSER_TITLE_DESC"
				class="inputbox"
			/>
			<field
				name="metakey"
				type="textarea"
				label="COM_VOMBIEMUSIC_SONG_KEYWORDS"
				description="VOMBIEMUSIC_SONG_KEYWORDS_DESC"
				class="inputbox"
				rows="3"
				cols="30" 
			/>
			<field
				name="metadesc"
				type="textarea"
				label="COM_VOMBIEMUSIC_SONG_DESCRIPTION"
				description="VOMBIEMUSIC_SONG_DESCRIPTION_DESC"
				class="inputbox"
				rows="3"
				cols="30" 
			/>
		</fieldset>
</form>
