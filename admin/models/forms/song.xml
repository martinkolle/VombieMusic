<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="song">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			id="title"
			type="text"
			label="COM_VOMBIEMUSIC_SONG_NAME"
			description="COM_VOMBIEMUSIC_SONG_NAME_DESC"
			size="40"
			class="inputbox"
			default=""
			required="required"
		/>
		<field
			name="artist"
			type="text"
			label="COM_VOMBIEMUSIC_ARTIST"
			description="COM_VOMBIEMUSIC_ARTIST_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="year"
			type="text"
			label="COM_VOMBIEMUSIC_YEAR"
			description="COM_VOMBIEMUSIC_YEAR_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="catid"
			type="vombiemusiccategory"
			label="COM_VOMBIEMUSIC_SONG_CATID"
			description="COM_VOMBIEMUSIC_SONG_CATID_DESC"
			class="inputbox"
			default=""
		/>
		<field
			name="published"
			type="list"
			label="COM_VOMBIEMUSIC_SONG_PUBLISHED"
			description="COM_VOMBIEMUSIC_SONG_PUBLISHED_DESC"
			class="inputbox"
			default="1"
		>
		<option value="1">JPUBLISHED</option>
		<option value="0">JUNPUBLISHED</option>
		</field>
		<field
			name="name"
			type="text"
			label="COM_VOMBIEMUSIC_SONG_NAME"
			description="COM_VOMBIEMUSIC_SONG_NAME_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="access"
			type="text"
			label="COM_VOMBIEMUSIC_SONG_ACCESS"
			description="COM_VOMBIEMUSIC_SONG_ACCESS_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="song_url"
			type="text"
			label="COM_VOMBIEMUSIC_SONG_SONG_URL"
			description="COM_VOMBIEMUSIC_SONG_SONG_URL_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="document"
			type="vombiemusicupload"
			label="COM_VOMBIEMUSIC_SONG_SONG_DOCUMENT"
			description="COM_VOMBIEMUSIC_SONG_SONG_DOCUMENT_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="info"
			type="editor"
			label="COM_VOMBIEMUSIC_SONG_SONG_EDITOR"
			description="COM_VOMBIEMUSIC_SONG_SONG_EDITOR_DESC"
			size="40"
			class="inputbox"
		/>
	</fieldset>
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
		<field
			name="image"
			type="media"
			directory="media/com_vombiemusic"
			label="COM_VOMBIEMUSIC_PLAYLIST_IMAGE"
			description="COM_VOMBIEMUSIC_PLAYLIST_IMAGE_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="publish_up"
			type="calendar"
			label="COM_VOMBIEMUSIC_SONG_PUBLISH"
			description="VOMBIEMUSIC_SONG_PUBLISH_DESC"
			class="inputbox" 
			size="20"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" 
		/>
       <field
			name="publish_down"
			type="calendar"
			label="COM_VOMBIEMUSIC_SONG_UNPUBLISH"
			description="VOMBIEMUSIC_SONG_UNPUBLISH_DESC"
			class="inputbox" size="20"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" 
		/>
		<field
			name="created_by"
			type="user"
			label="COM_VOMBIEMUSIC_SONG_CREATED_BY"
			description="VOMBIEMUSIC_SONG_CREATED_BY_DESC" 
		/>
		<field
			name="created_by_alias"
			type="text"
			label="COM_VOMBIEMUSIC_SONG_CREATED_BY_ALIAS"
			description="VOMBIEMUSIC_SONG_CREATED_BY_ALIAS"
			class="inputbox"
			size="20" 
		/>
		</fieldset>
		<fieldset 
			name="metadata"
			label="VOMBIEMUSIC_METADATA">
        
        	<field
				name="metatitle"
				type="text"
				label="COM_VOMBIEMUSIC_BROWSER_TITLE"
				description="VOMBIEMUSIC_BROWSER_TITLE_DESC"
				class="inputbox"
			/>
			<field
				name="metakey"
				type="textarea"
				label="COM_VOMBIEMUSIC_SONG_KEYWORDS"
				description="VOMBIEMUSIC_SONG_KEYWORDS_DESC"
				class="inputbox"
				rows="3"
				cols="30" 
			/>
			<field
				name="metadesc"
				type="textarea"
				label="COM_VOMBIEMUSIC_SONG_DESCRIPTION"
				description="VOMBIEMUSIC_SONG_DESCRIPTION_DESC"
				class="inputbox"
				rows="3"
				cols="30" 
			/>
		</fieldset>
</form>